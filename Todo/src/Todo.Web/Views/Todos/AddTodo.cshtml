@model Todo.Web.Models.TodosListModel

@{
    ViewData["Title"] = "Add Todo";
}

<h1> Ajout d'un Todo </h1>

<form asp-controller="Todos" asp-action="AddTodo" method="post">
    <div>
        <label for="description">Description:</label>
        <input type="text" id="description" name="description">
    </div>
    <div>
        <label for="priority">Priority:</label>
        <input type="number" id="priority" name="priority">
    </div>
    <div>
        <label for="etiquette">etiquette:</label>
        <input type="number" id="etiquette" name="etiquette">
    </div>
    <div>
        <input type="submit" value="Ajouter">
    </div>
</form>
