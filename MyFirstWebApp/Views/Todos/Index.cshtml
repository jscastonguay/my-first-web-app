@model MyFirstWebApp.Models.CounterModel

@{
    ViewData["Title"] = "Index";
}

<h1> La page de Todos </h1>

<form method="post">
    <div>
        <label for="Counter">Ceci est le counter:</label>
        <input type="number" id="Counter" name="Counter" value="@ViewData["Counter"]">
    </div>
    <div>
        <input type="submit" value="Set">
    </div>
</form>
<form asp-controller="Todos" asp-action="CounterInc" method="get">
    <input type="submit" value="Increase">
</form>
<p>
    Voici la valeur du counter: @ViewData["Counter"]
</p>
